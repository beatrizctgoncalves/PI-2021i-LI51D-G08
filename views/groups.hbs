<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="http://localhost:8080/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://localhost:8080/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="/favicon.png"/>
    <link rel="icon" type="image/png" href="http://localhost:8080/logo.png"/>
    <title>COVIDA</title>
</head>

<body id="home-body">
   <!-- Navigation -->
   <nav>
      <div class='navbar navbar-expand-lg navbar-dark bg-dark'>
         <a class="navbar-brand" href="/">
            <img src='http://localhost:8080/covida.png' width="75" height="30" alt="">
         </a>
         <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav" id="navBarLinks">
               <div class="form-inline">
                  <input id="searchForm" class="form-control mr-sm-2" type="search" placeholder="Search">
                  <button id="searchButton" class="btn btn-primary">
                     <i class="fas fa-search"></i>
                  </button>
               </div>
            </div>
            <div class="userInfo">
               <a class="text-white p-4" href="/account">{{username}}</a>
		         <a href="/logout"<button class="btn btn-primary" type="button">Log Out</button></a>
            </div>
         </div>
      </div>
   </nav>
   <hr>

    <!-- Page Content -->
    <h1>{{username}}'s Groups</h1>
    <div>
        <div class="card-columns card-groups m-3">
            {{#each groups}}
                <div class="card text-center">
                    <div class="card-header bg-primary">
                        <a href="/site/groups/{{id}}" class = "text-dark">
                           {{name}}
                        </a>
                        <a href="/editGroup/{{id}}/{{name}}" class="float-left text-dark">
                            <i class="far fa-edit"></i>
                        </a>

                        <form class="float-right text-dark" action="/site/groups/{{id}}" method="POST">
                           <input type="image" src="./../../../dustbin.png" alt="" width="20" height="20">
                        </form>

                    </div>
                    <div class="card-body text-center">
                        <p class="card-text"><em>{{desc}}</em></p>
                    </div>
                    <div class="card-footer text-muted">
                        {{#each games}}
                            <div class="card-body text-center">
                                <a href={{url}}>{{name}}</a>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}  
        </div>
            
        <div class = "col text-center">
            <br><br><a href="/account"<button class="btn btn-primary" type="button">Go Back</button></a><br><br>
         </div> 
    </div>
    <script>
         document.getElementById("searchButton").onclick = () => {
            let userInput = document.getElementById("searchForm").value
            if(userInput) {
               let result = "http://localhost:8080/site/games/name/".concat(userInput)
               location.href = result
            } else {
               alert("To search for a Game you need to insert a name!")
            }
         }
    </script>
</body>
</html>
